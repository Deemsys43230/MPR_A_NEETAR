<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner"
    android:minHeight="200dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_detection"
            android:text="Place on air"
            android:textSize="18sp"
            android:textColor="@color/ar_white"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plane_on_off"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale"
            android:id="@+id/text_scale"
            android:textSize="18sp"
            android:textColor="@color/ar_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iphon"
            android:text="-"
            android:layout_toRightOf="@+id/text_scale"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/ar_black"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dynamic_scale"
            android:text="0.0"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/ar_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_below="@id/text_scale"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/get_scale"
                android:min="1"
                android:max="20"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zoom_detection"
                android:text="Zoom"
                android:textColor="@color/ar_white"
                android:textSize="18sp" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zoom_on_off"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"/>


        </RelativeLayout>
    </LinearLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/settings_apply"
        android:text="Apply"
        android:textAllCaps="false"
        android:background="@drawable/rounded_button"
        android:textColor="@color/ar_white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"/>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:id="@+id/settings_cancel"
           android:text="Cancel"
           android:textAllCaps="false"
           android:background="@drawable/rounded_button"
           android:textColor="@color/ar_white"
           android:layout_toLeftOf="@+id/settings_apply"
           android:layout_centerHorizontal="true"
           android:layout_marginRight="20dp"/>

   </RelativeLayout>




</LinearLayout>