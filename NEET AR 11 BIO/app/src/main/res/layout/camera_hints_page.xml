<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/round_corner">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/help_close"
        android:layout_gravity="right|top"
        android:src="@drawable/closebutton"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/help_image"
            android:src="@drawable/ic_help_outline_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hints_header"
            android:textSize="20sp"
            android:text="Help"
            android:layout_centerVertical="true"
            android:textColor="@color/ar_black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/help_image"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/ar_white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/help_list_ar"
        android:layout_marginTop="5dp">
    </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>