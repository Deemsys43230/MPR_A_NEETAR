<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="500dp"
    android:minWidth="500dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/alphapet_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"
            android:background="#395d15"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/animal_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"
            android:background="#7cb364"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/fandv_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"
            android:background="#9e9e9e"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/c_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <ImageView
                android:id="@+id/deco_icon_alphapet"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/show_alphabet"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:fontFamily="@font/gothamrounded_medium"
                android:text="ALPHABETS"
                android:textColor="@color/button_icon_color"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/alphapets_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.1"
                android:src="@drawable/animal_close" />
        </LinearLayout>

        <View
            android:id="@+id/v_one"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/c_one"
            android:layout_marginBottom="5dp"
            android:background="@color/gallery_line_color" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_alphapets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/v_one"
            android:layout_margin="1dp"
            android:scrollbars="vertical" />
    </RelativeLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="40dp"/>-->
</FrameLayout>