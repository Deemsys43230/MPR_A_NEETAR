<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="105dp"-->
    <!--android:layout_height="130dp"-->
    <!--app:cardElevation="10dp"-->
    <!--app:cardCornerRadius="5dp"-->
    <!--&gt;-->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_circle_one"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/alphapets"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/alligator"
                    app:civ_border_overlay="true"/>
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:id="@+id/lock"
                    android:src="@drawable/padlock"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:layout_marginTop="1dp"/>

            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alphapet_label"
            android:text="Labell"
            android:textSize="14sp"
            android:textColor="@color/ar_white"
            android:fontFamily="@font/comic_sans_ms_bold"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:singleLine="true"/>
    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>