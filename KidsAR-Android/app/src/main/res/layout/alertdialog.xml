<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCFFFFFF"
    android:elevation="5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/gothamrounded_medium"
        android:text="Title"
        android:textColor="@color/darkgray"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:focusable="true"
        android:fontFamily="@font/gothamrounded_book"
        android:padding="5dp"
        android:text="Alert Message"
        android:textColor="@color/ar_black"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelalert"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:alpha=".6"
            android:background="@drawable/button_back_icon"
            android:fontFamily="@font/gothamrounded_medium"
            android:padding="3dp"
            android:text="Cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/okalert"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:alpha=".6"
            android:background="@drawable/button_back_icon"
            android:fontFamily="@font/gothamrounded_medium"
            android:padding="3dp"
            android:text="OK"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>