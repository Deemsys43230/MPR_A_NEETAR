<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/kid_ar_toolbar">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/custom_navigation"
            android:src="@drawable/btn_back"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/model_name"
            android:text="Animals"
            android:textSize="25sp"
            android:textColor="@color/ar_white"
            android:singleLine="true"
            android:layout_toRightOf="@+id/custom_navigation"
            android:fontFamily="@font/comic_sans_ms_bold"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/alphapet_collections"
            android:src="@drawable/show_alphabet"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:tint="@color/ar_white"/>
    </RelativeLayout>

    <Button
        android:id="@+id/take_screenshot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="149dp"
        android:background="@drawable/camera" />

    <Button
        android:id="@+id/play_music"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/take_screenshot"
        android:layout_marginEnd="145dp"
        android:background="@drawable/volume" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/unity_scene_view"
        android:layout_below="@+id/kid_ar_toolbar">
    </FrameLayout>
</RelativeLayout>